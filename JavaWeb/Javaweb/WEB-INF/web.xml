<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">

	<display-name>Welcome to Tomcat</display-name>
	<description>
		 Welcome to Tomcat
	</description>
	<servlet>
		<servlet-name>he</servlet-name>
		<jsp-file>/WEB-INF/hello.jsp</jsp-file>
		<init-param>
			<param-name>driver</param-name>
			<param-value>org.gjt.mm.mysql.Driver</param-value>
		</init-param>
		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:mysql://localhost:3306/db_javaweb</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>he</servlet-name>
		<url-pattern>/hello.rqiang</url-pattern> 
	</servlet-mapping>
	
	<filter>
		<filter-name>simple</filter-name>
		<filter-class>com.rqiang.Servlet.SimpleFilter</filter-class>
		<init-param>
			<param-name>ref</param-name>
			<param-value>HelloWorld</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>encoding</filter-name>
		<filter-class>com.rqiang.Servlet.EncodingFilter</filter-class>
		<init-param>
			<param-name>charset</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	
	
	<servlet>
		<servlet-name>initParam</servlet-name>
		<servlet-class>
			com.rqiang.Servlet.InitParamServlet
		</servlet-class>
		<init-param>
			<param-name>ref</param-name>
			<param-value>lif</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>sessionDemo</servlet-name>
		<servlet-class>
			com.rqiang.Servlet.HttpSessionDemoServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletContextDemoServlet</servlet-name>
		<servlet-class>
			com.rqiang.Servlet.ServletContextDemoServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ClientRedirectDemo</servlet-name>
		<servlet-class>
			com.rqiang.Servlet.ClientRedirectDemo
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServerRedirectDemo</servlet-name>
		<servlet-class>
			com.rqiang.Servlet.ServerRedirectDemo
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>
			com.rqiang.DAO2.servlet.LoginServlet
		</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>hello</servlet-name>
		<servlet-class>
			com.rqiang.Servlet.HelloServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>input</servlet-name>
		<servlet-class>
			com.rqiang.Servlet.InputServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LifeCycle</servlet-name>
		<servlet-class>
			com.rqiang.Servlet.LifeCycleServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>hello</servlet-name>
		<url-pattern>/helloServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>hello</servlet-name>
		<url-pattern>/xxx</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>input</servlet-name>
		<url-pattern>/Servlet/InputServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LifeCycle</servlet-name>
		<url-pattern>/Servlet/LifeCycleServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>initParam</servlet-name>
		<url-pattern>/Servlet/initParamServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>sessionDemo</servlet-name>
		<url-pattern>/sessionDemo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletContextDemoServlet</servlet-name>
		<url-pattern>/ServletContextDemoServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClientRedirectDemo</servlet-name>
		<url-pattern>/ClientRedirectDemo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServerRedirectDemo</servlet-name>
		<url-pattern>/ServerRedirectDemo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/Servlet/MVC/LoginServlet</url-pattern>
	</servlet-mapping>
	
	<filter-mapping>
		<filter-name>simple</filter-name>
		<url-pattern>/asdsadasasd/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>
			com.rqiang.listenerdemo.OnlineUserList
		</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>ELServlet</servlet-name>
		<servlet-class>
			com.rqiang.EL.ELServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ELListServlet</servlet-name>
		<servlet-class>
			com.rqiang.EL.ELListServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ELListServlet</servlet-name>
		<url-pattern>/EL/ELListServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ELServlet</servlet-name>
		<url-pattern>/EL/ELServlet</url-pattern>
	</servlet-mapping>
	
	
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/rqiang</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<welcome-file-list>
		<welcome-file>main.html</welcome-file>
		<welcome-file>main.htm</welcome-file>
		<welcome-file>main.jsp</welcome-file>
	</welcome-file-list>
	
	<security-constraint>											<!--不通过编程来限制资源的访问 2022_07_04-->  
	  <web-resource-collection>  									<!--定义限制访问的资源-->    
	   <web-resource-name>RegisteredUsers</web-resource-name>     	<!--限制访问的名称-->
	   <url-pattern>/requestDemo/security.jsp</url-pattern>  		<!--限制访问的路径--> 										
	  </web-resource-collection>
	  <auth-constraint>     										<!--定义访问此限制资源的角色-->
	   <role-name>rootusers</role-name>                        		<!--rootusers角色可以访问-->
	   <role-name>adminusers</role-name>     						<!--adminusers角色可以访问-->
	  </auth-constraint>
	</security-constraint>

	<login-config>													<!--指定所使用的验证方法-->      
	  <auth-method>BASIC</auth-method>    							<!--使用basic验证，通过弹出登录窗口提示用户输入用户名和密码-->
	<realm-name>Registered Users</realm-name>    					<!--验证中使用的领域名称-->
	</login-config>
	<security-role>													<!--指定用于安全约束中安全角色的声明-->
	  <role-name>rootusers</role-name>
	</security-role>
	<security-role>													<!--指定用于安全约束中安全角色的声明-->
	  <role-name>adminusers</role-name>
	</security-role>
	
</web-app>

